{
  "name": "pug-compile",
  "displayName": "Pug Compile",
  "description": "VSCode扩展，用于将Pug文件编译为HTML",
  "version": "0.0.3",
  "publisher": "Kiraalla",
  "icon": "./logo.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kiraalla/pug-compile.git"
  },
  "bugs": {
    "url": "https://github.com/Kiraalla/pug-compile/issues"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "activationEvents": [
    "onLanguage:pug"
  ],
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "pug",
        "aliases": [
          "Pug",
          "pug"
        ],
        "extensions": [
          ".pug",
          ".jade"
        ],
        "configuration": "./languages/lang.json",
        "filenamePatterns": [],
        "firstLine": "^(doctype|html)",
        "mimetypes": [
          "text/x-pug",
          "text/pug"
        ]
      }
    ],
    "commands": [
      {
        "command": "pug-compile.compile",
        "title": "Pug Compile：将Pug编译为HTML",
        "category": "Pug Compile",
        "icon": {
          "light": "./icon.png",
          "dark": "./icon.png"
        }
      },
      {
        "command": "pug-compile.format",
        "title": "Pug：格式化文件",
        "category": "Pug Compile"
      }
    ],
    "capabilities": {
      "documentFormattingProvider": true
    },
    "grammars": [
      {
        "language": "pug",
        "path": "./syntaxes/pug.tmLanguage.json",
        "scopeName": "text.pug",
        "embeddedLanguages": {
          "text.html.basic": "html",
          "source.js": "javascript",
          "source.ts": "typescript"
        }
      }
    ],
    "keybindings": [
      {
        "command": "pug-compile.compile",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": "editorLangId == pug"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId == pug",
          "command": "pug-compile.compile",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "editorLangId == pug",
          "command": "pug-compile.compile",
          "group": "1_modification"
        }
      ],
      "commandPalette": [
        {
          "command": "pug-compile.compile",
          "when": "editorLangId == pug"
        }
      ]
    },
    "configuration": {
      "title": "Pug Compile",
      "properties": {
        "pug-compile.outputPath": {
          "type": "string",
          "default": "",
          "description": "HTML输出路径（相对或绝对路径）"
        },
        "pug-compile.outputPathFormat": {
          "type": "string",
          "default": "same",
          "enum": [
            "same",
            "custom",
            "relative"
          ],
          "description": "输出路径格式：same(相同目录)|custom(自定义目录)|relative(保持相对路径)"
        },
        "pug-compile.pretty": {
          "type": "boolean",
          "default": true,
          "description": "是否格式化输出HTML"
        },
        "pug-compile.autoCompile": {
          "type": "boolean",
          "default": true,
          "description": "保存时自动编译Pug文件"
        },
        "pug-compile.format.enable": {
          "type": "boolean",
          "default": true,
          "description": "启用Pug文件格式化"
        },
        "pug-compile.format.fillTab": {
          "type": [
            "boolean",
            "null"
          ],
          "default": null,
          "description": "使用Tab缩进，如果为false则使用空格"
        },
        "pug-compile.format.omitDiv": {
          "type": "boolean",
          "default": false,
          "description": "当标签有id或class时省略div标签"
        },
        "pug-compile.format.tabSize": {
          "type": [
            "number",
            "null"
          ],
          "default": 2,
          "description": "当 fillTab 为 false 时，使用的空格数量"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/pug": "^2.0.10",
    "@types/vscode": "^1.6.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.9.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "pug": "^3.0.2",
    "pug-beautify": "^0.1.1"
  }
}